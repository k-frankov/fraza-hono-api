{
  "name": "fraza-hono-api",
  "version": "1.0.0",
  "description": "Fraza API built with Hono.js for Azure Container Apps",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "docker:build": "docker build -t fraza-hono-api .",
    "docker:run": "docker run -p 3000:3000 fraza-hono-api"
  },
  "keywords": [
    "hono",
    "api",
    "azure",
    "container-apps"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@hono/node-server": "^1.13.7",
    "@hono/zod-validator": "^0.7.5",
    "firebase-admin": "^13.6.0",
    "hono": "^4.6.14",
    "zod": "^4.1.13"
  },
  "devDependencies": {
    "@types/node": "^20.17.10",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2"
  }
}
