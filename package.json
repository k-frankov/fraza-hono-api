{
  "name": "fraza-hono-api",
  "version": "1.0.0",
  "description": "Fraza API built with Hono.js for Azure Container Apps",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "esbuild src/index.ts --bundle --platform=node --target=node20 --format=esm --outfile=dist/index.js --packages=external",
    "typecheck": "tsc --noEmit",
    "start": "node dist/index.js",
    "lint": "eslint .",
    "docker:build": "docker build -t fraza-hono-api .",
    "docker:run": "docker run -p 3000:3000 fraza-hono-api"
  },
  "keywords": [
    "hono",
    "api",
    "azure",
    "container-apps"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@azure-rest/ai-inference": "^1.0.0-beta.6",
    "@azure/core-auth": "^1.10.1",
    "@azure/storage-blob": "^12.29.1",
    "@hono/node-server": "^1.13.7",
    "@hono/zod-validator": "^0.7.5",
    "@neondatabase/serverless": "^1.0.2",
    "firebase-admin": "^13.6.0",
    "hono": "^4.6.14",
    "microsoft-cognitiveservices-speech-sdk": "^1.47.0",
    "zod": "^4.1.13"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@types/node": "^20.17.10",
    "esbuild": "^0.27.1",
    "eslint": "^9.39.1",
    "globals": "^16.5.0",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.49.0"
  }
}
